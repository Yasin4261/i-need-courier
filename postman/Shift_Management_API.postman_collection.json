	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Courier Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    pm.environment.set('courier_token', response.token);",
									"    pm.environment.set('courier_id', response.courierId);",
									"    console.log('Token saved:', response.token);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"ahmet.yilmaz@example.com\",\n    \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/auth/courier/login",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "auth", "courier", "login"]
						},
						"description": "Kurye girişi yapar ve JWT token alır"
					},
					"response": []
				},
